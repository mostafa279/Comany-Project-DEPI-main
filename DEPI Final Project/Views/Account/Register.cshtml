@model AdminRegisterVM
@{
    ViewData["Title"] = "Register";
}
<h1>Register</h1>

<h4>RegisterUserVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegisterUserVM.UserName" class="control-label"></label>
                <input asp-for="RegisterUserVM.UserName" class="form-control" />
                <span asp-validation-for="RegisterUserVM.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUserVM.Email" class="control-label"></label>
                <input asp-for="RegisterUserVM.Email" class="form-control" />
                <span asp-validation-for="RegisterUserVM.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUserVM.Password" class="control-label"></label>
                <input asp-for="RegisterUserVM.Password" class="form-control" />
                <span asp-validation-for="RegisterUserVM.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUserVM.ConfirmPassword" class="control-label"></label>
                <input asp-for="RegisterUserVM.ConfirmPassword" class="form-control" />
                <span asp-validation-for="RegisterUserVM.ConfirmPassword" class="text-danger"></span>
            </div>
<form asp-action="Register">
    <div class="form-group">
        <label for="Role">Select Role</label>
                    <select asp-for="SelectedRole" class="form-control" asp-items="@Model.RolesList">
                        <option value="">-- Select Role --</option>
        </select>
    </div>
</form>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}